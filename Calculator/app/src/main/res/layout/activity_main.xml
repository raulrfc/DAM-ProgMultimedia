<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p31_2linear.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="number"
        android:background="#ffffffff"
        android:layout_weight="0.41"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="376dp"
            android:fitsSystemWindows="false"
            android:orientation="vertical" >

            <Button
                android:id="@+id/suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="@string/btnSuma"
                android:width="50dp"
                android:background="#ffff670f"
                android:textSize="20dp" />

            <Button
                android:id="@+id/resta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="@string/btnResta"
                android:width="50dp"
                android:background="#ffff670f"
                android:textSize="20dp" />

            <Button
                android:id="@+id/multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="@string/btnMulti"
                android:width="50dp"
                android:background="#ffff670f"
                android:textSize="20dp" />

            <Button
                android:id="@+id/dividir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="50dp"
                android:text="@string/btnDiv"
                android:width="50dp"
                android:background="#ffff670f"
                android:textSize="20dp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/uno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn1"
                    android:width="50dp"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/dos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn2"
                    android:width="50dp"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/tres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn3"
                    android:width="50dp"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/cuatro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn4"
                    android:width="50dp"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/cinco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn5"
                    android:background="#fffffcf5"
                    android:textSize="20dp"
                    android:height="50dp" />

                <Button
                    android:id="@+id/seis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn6"
                    android:background="#fffffcf5"
                    android:textSize="20dp"
                    android:height="50dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/siete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn7"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/ocho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn8"
                    android:background="#fffffcf5"
                    android:textSize="20dp"
                    android:height="50dp" />

                <Button
                    android:id="@+id/nueve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn9"
                    android:background="#fffffcf5"
                    android:textSize="20dp"
                    android:height="50dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btnClear"
                    android:width="50dp"
                    android:background="#ff000000"
                    android:textColor="#ffffffff"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/cero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btn0"
                    android:width="50dp"
                    android:background="#fffffcf5"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/igual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:text="@string/btnIgual"
                    android:width="50dp"
                    android:background="#ff030101"
                    android:textColor="#ffffffff"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>
